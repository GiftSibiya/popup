{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "moduleResolution": "node16",
    "module": "Node16",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ]
    }
  },
  "include": [
    "./**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/assets.d.ts"
  ]
}